@page "/counter"
@inject IValidator<Person> PersonValidator
@using ValidationDemo.Model.FluentValidation
@using FluentValidation

<EditForm Model="@person" OnValidSubmit="SavePerson">
    <FluentValidationValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="name">Name:</label>
        <InputText id="name" class="form-control" @bind-Value="person.Name" />
        <ValidationMessage For="@(() => person.Name)" class="validation-error" />
    </div>

    <div class="form-group">
        <label for="age">Age:</label>
        <InputNumber id="age" class="form-control" @bind-Value="person.Age" />
        <ValidationMessage For="@(() => person.Age)" class="validation-error" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</EditForm>

@code {
    private Person person = new Person();

    private void SavePerson()
    {
        Console.WriteLine("Form Submitted Successfully!");
    }
}
